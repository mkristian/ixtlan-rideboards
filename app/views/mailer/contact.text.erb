<% require 'paragraph' -%>
<%= _ "Hello" %> <%= @contact.listing.name %>

<%= Paragraph.format(_("Please contact") + ' ' + @contact.name.strip + ' ' + _("in order to discuss your") + ' ' + @contact.listing.driver ? _("ride offer") : _("ride request") + ' ' + _("to _BOARD_NAME_").sub(/_BOARD_NAME_/, @contact.listing.board.fullname) + ' ' + _("on") + ' ' +  @contact.listing.ridedate.to_s, 60) %>.

<%= _ "You can reach" %> <%= @contact.name.strip %> <%= _ "by email at:" %> <%= @contact.email.strip %>
<% if @contact.phone && @contact.phone.strip != "" %><%= _ "or by telephone at:" %> <%= @contact.phone %>.
<% end %>

<%= _ "Please do not reply to this email unless you require additional assistance." %>

<%= _ "With best wishes," %>
<%= @contact.listing.board.venue.fullname %> <%= _ "Rideshare" %>
<%= @contact.listing.board.venue.email %>


