<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:t="urn:import:org.dhamma.rideboards.client.editors">

  <g:FlowPanel styleName="gwt-rails-display rideboard-configurations">

    <g:Label>Configuration</g:Label>

    <g:FlowPanel styleName="gwt-rails-buttons">
      <g:Button ui:field="edit">Edit</g:Button>
      <g:Button ui:field="reload">Reload</g:Button>
    </g:FlowPanel>

    <t:ConfigurationEditor ui:field="editor" styleName="gwt-rails-model-editor" />

    <g:FlowPanel styleName="gwt-rails-buttons">
      <g:Button ui:field="save">Save</g:Button>
      <g:Button ui:field="cancel">Cancel</g:Button>
    </g:FlowPanel>

  </g:FlowPanel>

</ui:UiBinder>